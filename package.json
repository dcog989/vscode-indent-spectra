{
    "name": "indent-spectra",
    "displayName": "Indent Spectra",
    "description": "High-performance indentation highlighting with modern architecture.",
    "version": "1.0.0",
    "publisher": "user",
    "engines": {
        "vscode": "^1.106.2"
    },
    "categories": [
        "Formatters",
        "Visualization"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./out/extension.js",
    "browser": "./out/extension.js",
    "capabilities": {
        "virtualWorkspaces": true,
        "untrustedWorkspaces": {
            "supported": true
        }
    },
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "Indent Spectra",
            "properties": {
                "indentSpectra.updateDelay": {
                    "type": "integer",
                    "default": 100,
                    "description": "Delay in ms before updating decorations (debouncing)."
                },
                "indentSpectra.colors": {
                    "type": "array",
                    "default": [
                        "rgba(255,255,64,0.07)",
                        "rgba(127,255,127,0.07)",
                        "rgba(255,127,255,0.07)",
                        "rgba(79,236,236,0.07)"
                    ],
                    "description": "Array of colors to cycle through indentation levels."
                },
                "indentSpectra.errorColor": {
                    "type": "string",
                    "default": "rgba(128,32,32,0.4)",
                    "description": "Color for indentation errors (indent not divisible by tabsize)."
                },
                "indentSpectra.mixColor": {
                    "type": "string",
                    "default": "rgba(128,32,96,0.6)",
                    "description": "Color for mixed tabs and spaces on the same line."
                },
                "indentSpectra.ignorePatterns": {
                    "type": "array",
                    "default": [
                        "/[ \t]* [*]/g",
                        "/[ \t]+[/]{2}/g"
                    ],
                    "description": "Regex patterns to ignore (e.g. block comments)."
                },
                "indentSpectra.ignoredLanguages": {
                    "type": "array",
                    "default": [
                        "plaintext",
                        "markdown"
                    ],
                    "description": "Languages to disable the extension for."
                },
                "indentSpectra.indicatorStyle": {
                    "type": "string",
                    "enum": [
                        "classic",
                        "light"
                    ],
                    "default": "classic",
                    "description": "Render style: 'classic' for background block, 'light' for thin lines."
                },
                "indentSpectra.lightIndicatorWidth": {
                    "type": "number",
                    "default": 1,
                    "description": "Width of the line in pixels when using 'light' mode."
                },
                "indentSpectra.ignoreErrorLanguages": {
                    "type": "array",
                    "default": [
                        "markdown"
                    ],
                    "description": "Languages where indentation errors should NOT be highlighted, but rainbows still show."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^8.1.0",
        "@types/mocha": "^10.0.10",
        "@types/node": "^24.10.1",
        "@types/vscode": "^1.106.0",
        "@vscode/test-electron": "^2.5.2",
        "glob": "^13.0.0",
        "mocha": "^11.7.5",
        "typescript": "^5.9.x"
    }
}