{
    "name": "indent-spectra",
    "displayName": "Indent Spectra",
    "description": "Colorizes indentation. Modern architecture. Fast. Color theory-based palettes. Like 'indent-rainbow' but better.",
    "version": "1.2.1",
    "publisher": "dcog989",
    "icon": "assets/icon.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/dcog989/vscode-indent-spectra.git"
    },
    "bugs": {
        "url": "https://github.com/dcog989/vscode-indent-spectra/issues"
    },
    "homepage": "https://github.com/dcog989/vscode-indent-spectra/blob/main/README.md",
    "engines": {
        "vscode": "^1.106.1"
    },
    "categories": [
        "Formatters",
        "Visualization"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./out/extension.js",
    "browser": "./out/extension.js",
    "capabilities": {
        "virtualWorkspaces": true,
        "untrustedWorkspaces": {
            "supported": true
        }
    },
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "Indent Spectra",
            "properties": {
                "indentSpectra.updateDelay": {
                    "type": "integer",
                    "default": 100,
                    "description": "Delay in ms before updating decorations (debouncing)."
                },
                "indentSpectra.colorPreset": {
                    "type": "string",
                    "enum": [
                        "universal",
                        "protan-deuteran",
                        "tritan",
                        "cool",
                        "warm",
                        "custom"
                    ],
                    "default": "universal",
                    "description": "Pre-defined color palettes. Set to 'custom' to use the 'colors' array below."
                },
                "indentSpectra.colors": {
                    "type": "array",
                    "default": [
                        "rgba(255, 215, 0, 0.1)",
                        "rgba(65, 105, 225, 0.1)",
                        "rgba(255, 105, 180, 0.1)",
                        "rgba(0, 255, 255, 0.1)"
                    ],
                    "description": "Custom colors array. Only used when 'colorPreset' is set to 'custom'."
                },
                "indentSpectra.errorColor": {
                    "type": "string",
                    "default": "rgba(200, 50, 50, 0.5)",
                    "description": "Color for indentation errors (indent not divisible by tabsize)."
                },
                "indentSpectra.mixColor": {
                    "type": "string",
                    "default": "rgba(150, 50, 150, 0.6)",
                    "description": "Color for mixed tabs and spaces on the same line."
                },
                "indentSpectra.ignorePatterns": {
                    "type": "array",
                    "default": [
                        "/[ \t]* [*]/g",
                        "/[ \t]+[/]{2}/g"
                    ],
                    "description": "Regex patterns to ignore (e.g. block comments)."
                },
                "indentSpectra.ignoredLanguages": {
                    "type": "array",
                    "default": [
                        "plaintext",
                        "markdown"
                    ],
                    "description": "Languages to disable the extension for."
                },
                "indentSpectra.indicatorStyle": {
                    "type": "string",
                    "enum": [
                        "classic",
                        "light"
                    ],
                    "default": "classic",
                    "description": "Render style: 'classic' for background block, 'light' for thin lines."
                },
                "indentSpectra.lightIndicatorWidth": {
                    "type": "number",
                    "default": 1,
                    "description": "Width of the line in pixels when using 'light' mode."
                },
                "indentSpectra.ignoreErrorLanguages": {
                    "type": "array",
                    "default": [
                        "markdown"
                    ],
                    "description": "Languages where indentation errors should NOT be highlighted, but rainbows still show."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^8.1.0",
        "@types/mocha": "^10.0.10",
        "@types/node": "^24.10.1",
        "@types/vscode": "^1.106.1",
        "@vscode/test-electron": "^2.5.2",
        "glob": "^13.0.0",
        "mocha": "^11.7.5",
        "typescript": "^5.9.3"
    }
}